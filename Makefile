test:
	@echo
	@echo ------------------------------------------------------
	@echo :: Cargo tests
	@echo ------------------------------------------------------
	@echo
	@cd byte-rs && cargo test
	
	@echo
	@echo ------------------------------------------------------
	@echo :: Go tests
	@echo ------------------------------------------------------
	@echo
	@cd bootstrap && go test
	@echo

	@echo
	@echo ------------------------------------------------------
	@echo :: Byte tests
	@echo ------------------------------------------------------
	@go run ./byte.go test
	
	@echo
	@echo ======================================================
	@echo Tests passed!!!
	@echo ======================================================
	@echo
	
build:
	go build ./byte.go
